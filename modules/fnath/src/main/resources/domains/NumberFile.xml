<?xml version='1.0' encoding='UTF-8'?>
<domain-models xmlns='http://axelor.com/xml/ns/domain-models' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_4.0.xsd'>

	<module name="fnath" package="com.axelor.apps.fnath.db" />

	<entity name="NumberFile">
	
		<string name="folderName" title="Nom de dossier" />
		<string name="folderNumber" title="Numéro de dossier"  namecolumn="true" />
		<many-to-one name="personInCharge" title="Assigné à" ref="com.axelor.auth.db.User" />
		<date name="startDate" title="Date de début" />
		<one-to-many name="actionFlow" title="Suivis des actions " ref="com.axelor.apps.crm.db.Event" mappedBy="numberFile" />
		<one-to-many name="attachments" title="Pièces jointes" ref="com.axelor.apps.fnath.db.FnathAttachment"  />
		<date name="endDate" title="Date de fin" />
		<many-to-one name="partner" title="Tiers" ref="com.axelor.apps.base.db.Partner" />
		<integer name="statusSelect" title="Statut" selection="number.file.status.select" default="1"/>
		
		<integer name="importId" />
		
		<!-- TRANSFERT / RETOUR -->
		<many-to-one name="company" title="Groupement ciblé" ref="com.axelor.apps.base.db.Company" />
		<string name="comments" title="Commentaire" large="true" multiline="true" />
		<one-to-many name="numberFileTransfer" title="Transferts" ref="com.axelor.apps.fnath.db.NumberFileTransfer" mappedBy="numberFile" />
		
		<extra-code><![CDATA[
	
	   	// STATUS SELECT
		public static final int STATUS_ONGOING = 1;
		public static final int STATUS_TRANFERED = 2;
		public static final int STATUS_RETURNED = 3;
		public static final int STATUS_CLOSED = 4;
		
	]]></extra-code> 
				
	</entity>

</domain-models>